<h1> This is a list of all Todo's </h1>

<p>
  <%= link_to "Create a Todo", new_todo_path %>
</p>

<table>
  <tr>
    <th> ID </th>
    <th> Name </th>
    <th> Description </th>
  </tr>
  <% @todos.each do |display| %>
    <tr>
      <td><%= display.id %></td>
      <td><%= display.name %></td>
      <td><%= display.description %></td>
      <td><%= link_to "Edit", edit_todo_path(display)%></td>
      <td><%= link_to "Show", todo_path(display) %></td>
      <td><%= link_to "Delete", todo_path(display), method: :delete, data: {confirm: "Are you sure?"} %></td>  
    </tr>
  <% end %>
  </table>